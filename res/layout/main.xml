<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:layout_height="wrap_content"
                android:text="@string/app_description"
                android:layout_width="fill_parent" android:gravity="center"></TextView>
            <ImageView android:layout_height="wrap_content"
                android:src="@drawable/yuzuko" android:layout_width="wrap_content"
                android:layout_gravity="center" android:layout_margin="@dimen/image_margin"></ImageView>
            <LinearLayout android:layout_height="wrap_content"
                android:orientation="horizontal" android:gravity="center"
                android:layout_width="fill_parent">
                <Button android:layout_height="wrap_content"
                    android:id="@+id/Button_prefs" android:text="@string/preferences"
                    android:layout_width="wrap_content" android:minEms="@string/button_min_ems"></Button>
                <Button android:layout_height="wrap_content"
                    android:id="@+id/Button_play" android:text="@string/testplay"
                    android:minEms="@string/button_min_ems"
                    android:layout_width="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
